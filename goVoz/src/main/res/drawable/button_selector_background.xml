<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">  
        <shape 
            android:shape="rectangle"
		    android:padding="5dp">
		    <solid android:color="@color/button_pressed_color" />
		    <corners
		        android:bottomRightRadius="@dimen/button_conner_radius"
		        android:bottomLeftRadius="@dimen/button_conner_radius"
		        android:topLeftRadius="@dimen/button_conner_radius"
		        android:topRightRadius="@dimen/button_conner_radius" />
		</shape>
    </item>
    <item> 
        <shape 
            android:shape="rectangle"
		    android:padding="5dp">
		    <solid android:color="@color/button_color" />
		    <corners
		        android:bottomRightRadius="@dimen/button_conner_radius"
		        android:bottomLeftRadius="@dimen/button_conner_radius"
		        android:topLeftRadius="@dimen/button_conner_radius"
		        android:topRightRadius="@dimen/button_conner_radius" />
		</shape>
    </item>
</selector>
