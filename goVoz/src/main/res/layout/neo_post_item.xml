<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/postInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/frame_border_white"
        tools:background="@drawable/frame_border_white"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:id="@+id/userInfoPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    >

                    <!--<ImageView-->
                        <!--android:id="@+id/avatar"-->
                        <!--android:layout_width="54dp"-->
                        <!--android:layout_height="54dp"-->
                        <!--android:scaleType="centerCrop"-->
                        <!--android:src="@drawable/user_icon" />-->
                    <com.felipecsl.gifimageview.library.GifImageView
                    android:id="@+id/avatar"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_icon">
                    </com.felipecsl.gifimageview.library.GifImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <GridLayout
                        android:id="@+id/gridUserPanel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3">

                        <TextView
                            android:id="@+id/user"
                            android:layout_gravity="left"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="user"
                            android:textColor="@color/dark_jungle_green2"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/postDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:text="postDate"
                            android:textColor="@color/taupe_gray"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/rank"
                            android:layout_gravity="left"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="rank"
                            android:textColor="@color/taupe_gray"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/joinDate"
                            android:layout_gravity="right"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:text="joinDate"
                            android:textColor="@color/taupe_gray"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/posted"
                            android:layout_gravity="left"
                            android:layout_marginLeft="5dp"
                            android:text="posted"
                            android:textColor="@color/taupe_gray"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/postCount"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:text="postCount"
                            android:textColor="@color/taupe_gray"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </GridLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Medium Text"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12dp"
            android:textStyle="bold" />

        <WebView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="0dp"
            android:animateLayoutChanges="false"
            android:clickable="false"
            android:background="@color/white"
            android:longClickable="true"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>