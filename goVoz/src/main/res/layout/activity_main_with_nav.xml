<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!-- The main content view -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/voz_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize" />

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_slidermenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="56dp"
        android:layout_gravity="start"
        android:elevation="16dp"
        android:background="@drawable/list_selector"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/dark_jungle_green">

            <LinearLayout
                android:id="@+id/logoLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="145dp"
                android:background="@color/taupe"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/logoVozView"
                    android:scaleType="fitCenter"
                    android:padding="1dp"
                    android:src="@drawable/vozlogo"
                    android:background="@drawable/circle_border" />
                <TextView
                    android:id="@+id/loggedInUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anonymous"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/isabelline"
                    android:textSize="20.0sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yourFavorite"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/liver">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginTop="1dp"
                    android:background="@color/taupe"
                    android:text="@string/yourPosts"
                    android:textSize="13.0sp"
                    android:gravity="center_vertical|center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp"
                    android:background="@color/taupe"
                    android:text="@string/yourThreads"
                    android:textSize="13.0sp"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>
            <ListView
                android:id="@+id/list_slidermenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@color/list_divider"
                android:dividerHeight="1dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_slider_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginLeft="56dp"
        android:layout_gravity="end"
        android:elevation="16dp"
        android:background="@drawable/list_selector"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:scrollbars="vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Forum shortcuts"
                    android:textStyle="bold"
                    />
                <ListView
                    android:id="@+id/list_right_menu_forum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:divider="@color/list_divider"
                    android:dividerHeight="1dp"
                    android:listSelector="@drawable/list_selector" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:scrollbars="vertical"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Thread shortcuts"
                    android:textStyle="bold"
                    />
                <ListView
                    android:id="@+id/list_right_menu_thread"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:divider="@color/list_divider"
                    android:dividerHeight="1dp"
                    android:listSelector="@drawable/list_selector" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>


