<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootSettingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingActivity" >

    <CheckBox
        android:id="@+id/confirmIgnore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loadImageByDemand"
        android:layout_below="@+id/loadImageByDemand"
        android:enabled="false"
        android:text="@string/setting_confirm_when_ignoring"
        android:textSize="14sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/confirmIgnore"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_application_font"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/fontSize"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:ems="10"
            android:inputType="number"
            android:text="16"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_font_metrics"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/theme_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_marginTop="24dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/theme_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/setting_theme"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal">
            <RadioButton
                android:id="@+id/darkThemeRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:checked="true"
                android:text="@string/setting_theme_dark"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/lightThemeRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:enabled="true"
                android:text="@string/setting_theme_light"
                android:textSize="14sp" />
        </RadioGroup>

    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:text="@string/change_font_note" />

    <CheckBox
        android:id="@+id/supportLongAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/autoReloadForum"
        android:layout_below="@+id/autoReloadForum"
        android:text="@string/supportLongAvatar"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/loadImageByDemand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:text="@string/setting_load_by_demand"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/supportLongAvatar"
        android:layout_below="@+id/supportLongAvatar"
        android:text="Hiệu ứng chuyển trang"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/autoReloadForum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/theme_linear_layout"
        android:layout_below="@+id/theme_linear_layout"
        android:text="@string/autoReloadForum"
        android:textSize="14sp" />

    <Button
        android:id="@+id/saveConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView4"
        android:onClick="saveConfig"
        android:text="@string/setting_save_config"
        android:textSize="16sp" />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:columnCount="7"
        android:rowCount="2" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginBottom="2dp"
            android:layout_row="0"
            android:src="@drawable/load159" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android1:layout_row="0"
            android:src="@drawable/load257" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_gravity="left"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/load278" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/load35" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="4"
            android:layout_gravity="left"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/loadday1" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="5"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/load715" />
        
        <RadioButton
            android1:id="@+id/radio159"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_column="0"
            android1:layout_gravity="center"
            android1:layout_row="1"
            android1:onClick="animationChoosing" />

        <RadioButton
            android1:id="@+id/radio257"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_column="1"
            android1:layout_gravity="center"
            android1:layout_row="1"
            android1:onClick="animationChoosing" />

        <RadioButton
            android1:id="@+id/radio278"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_column="2"
            android1:layout_gravity="center"
            android1:layout_row="1"
            android1:checked="false"
            android1:onClick="animationChoosing" />

        <RadioButton
            android1:id="@+id/radio35"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_column="3"
            android1:layout_gravity="center"
            android1:layout_row="1"
            android1:onClick="animationChoosing" />

        <RadioButton
            android1:id="@+id/radioday1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_column="4"
            android1:layout_gravity="center"
            android1:layout_row="1"
            android1:onClick="animationChoosing" />

        <RadioButton
            android1:id="@+id/radio715"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_column="5"
            android1:layout_gravity="center"
            android1:layout_row="1"
            android1:onClick="animationChoosing" />

    </GridLayout>

</RelativeLayout>